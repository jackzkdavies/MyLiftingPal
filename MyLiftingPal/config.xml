<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.myliftingpal"
    versionCode = "10"
    version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

	<name>MyLiftingPal</name>
	<description>
		An app used to track your lifting in the gym.
	</description>
	<author email="support@myliftingpal.net" href="http://www.myliftingpal.net">
		MyLiftingPal
	</author>
	<icon src="icon.png" />
	
	<gap:splash src="splash.jpg" />
	
	<gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.8.0">
        <param name="APP_ID" value="1538067003114411" />
        <param name="APP_NAME" value="Plus Strength" />
    </gap:plugin>	
	
	<preference name="Fullscreen" value="true" />
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="permissions" value="none"/>
	
	<feature name="http://api.phonegap.com/1.0/network"/>
		

</widget>

